<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/css/bootstrap-timepicker.min.css" />

<form action="/event/create" method="POST">

    <div class="row">
        <div class="card col-12 col-lg-6 col-xl-6" style="border-style: hidden;">
            <!-- Event Name -->
            <div class="form-group">
                <label>Event Name:</label>
                <input type="text" class="form-control" name="Event[name]" required>
            </div>

            <!-- Short Description -->
            <div class="form-group">
                <label>Short Description:</label><br>
                <textarea name="Event[shortInfo]" cols=60 rows=4 style="resize: both; max-width: 100%;" required></textarea>
            </div>

            <!-- Full Description -->
            <div class="form-group">
                <label>Full Description:</label><br>
                <textarea name="Event[fullInfo]" cols=60 rows=8 style="resize: both; max-width: 100%;"></textarea>
            </div>
        </div>

        <div class="card col-12 col-lg-6 col-xl-6" style="border-style: hidden;">
            <!-- Image URL -->
            <div class="form-group">
                <label>Image URL:</label>
                <input type="url" class="form-control" name="Event[imageSrc]">
            </div>

            <!-- Organizer -->
            <div class="form-group">
                <label>Organizer:</label><br>
                <select class="form-control" name="Event[organizer]" required>
                    <option value="" selected>-- Please pick one --</option>
                    <option value="Student Union">Student Union</option>
                    <option value="AMHKY">Association of Hong Kong and Mainland Youth</option>
                    <option value="Student Affairs">Student Affairs</option>
                    <option value="Social Service Association">Social Service Association</option>
                    <option value="UASE">The United Association of Sports and Entertainment</option>
                    <option value="Language Centre">Language Centre</option>
                    <option value="Academy of Visual Arts">Academy of Visual Arts</option>
                    <option value="Department of Computer Science">Department of Computer Science</option>
                </select>
            </div>

            <!-- Event Date -->
            <div class="form-group">
                <label>Event Date:</label>
                <input id="sandbox-container" type="text" class="form-control" name="Event[date]" required>
            </div>

            <!-- Start Time -->
            <div class="form-group">
                <label>Start Time:</label>
                <input id="time-picker1" type="text" class="form-control" name="Event[startTime]">
            </div>

            <!-- End Time -->
            <div class="form-group">
                <label>End Time:</label>
                <input id="time-picker2" type="text" class="form-control" name="Event[endTime]">
            </div>

            <!-- Venue -->
            <div class="form-group">
                <label>Venue:</label><br>
                <select class="form-control" name="Event[venue]" required>
                    <option value="" selected>-- Please pick one --</option>
                    <option value="HKBU Campus">HKBU Campus</option>
                    <option value="LT1">LT1</option>
                    <option value="LT2">LT2</option>
                    <option value="LT3">LT3</option>
                    <option value="AC Hall">AC Hall</option>
                    <option value="AAB201">AAB201</option>
                    <option value="WLB103">WLB103</option>
                    <option value="WLB211">WLB211</option>
                    <option value="FSC501">FSC501</option>
                    <option value="RRS401">RRS401</option>
                    <option value="CVA112">CVA112</option>
                </select>
            </div>

            <!-- Quota -->
            <div class="form-group">
                <label>Quota:</label>
                <input type="text" class="form-control" name="Event[quota]">
            </div>

            <!-- Highlighted Event -->
            <div class="form-group">
                <input type="checkbox" value="highlighted" name="Event[box]"> Highlighted Event
            </div>

            <button type="submit" class="btn btn-primary" style="width: 80px;">Submit</button>
            <br>
        </div>
    </div>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.min.js"></script>
<script>
    $('#sandbox-container').datepicker({
        format: "dd/mm/yyyy",
        daysOfWeekHighlighted: "0",
        todayHighlight: true
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-timepicker/0.5.2/js/bootstrap-timepicker.min.js"></script>
<script>
    $('#time-picker1').timepicker({
        template: false,
        showMeridian: false,
        minuteStep: 10
    });

    $('#time-picker2').timepicker({
        template: false,
        showMeridian: false,
        minuteStep: 10
    });
</script>